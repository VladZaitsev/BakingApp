<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.baikaleg.v3.baking.ui.recipedetails.viewmodel.RecipeDetailsViewModel" />
    </data>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.baikaleg.v3.baking.ui.recipedetails.StepDetailsFragment"
        tools:showIn="@layout/activity_step_details">

        <android.support.v4.view.ViewPager
            app:steps="@{viewModel.steps}"
            app:selected="@{viewModel.selected}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/step_details_pager"/>
    </RelativeLayout>
</layout>

